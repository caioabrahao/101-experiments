---
const { title = 'Default Title', description = 'Default Description', icon = 'ri-remixicon-line' } = Astro.props;
---

<div class="card">
    <i class=`${icon}`></i>
    <h4>{title}</h4>
    <p>{description}</p>
</div>

<style>
i{
    font-size: 3rem;
}
.card{
    border-radius: 8px;
    padding: 72px 16px;

    background-color: #f9f9f9;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    
    text-align: center;
    max-width: 250px;
}
.card h4{
    font-size: 1.5rem;
    margin-bottom: 8px;
}
.card p{
    font-size: 1rem;
    opacity: .5;
}

@media (max-width: 768px) {
    .card{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        height: fit-content;
    }
}

</style>