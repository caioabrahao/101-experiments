<header class="header">
    <p class="logo">101EXP</p>
    <div class="links">
        <nav class="nav">
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/participate">Participar</a></li>
                <li><a href="/learn">Aprender</a></li>
                <li><a href="/ideas">Ideias (Beta)</a></li>
                <li><a href="/submitted-projects">Projetos Enviados</a></li>
            </ul>
        </nav>

        <hr>
        
        <div class="socials">
            <a href="https://discord.gg/C9z6A9Dt9B"> <i class="ri-discord-fill"></i></a>
        </div>
    </div>
    <div class="hamburger">
        <i class="ri-menu-line"></i>
    </div>
</header>

<style>
    hr{
        height: 32px;
        border: none;
        border-left: 1px solid #333;
        opacity: .5;
    }

    i{
        font-size: 1.5rem;
    }

    .header{
        position: fixed;
        width: 100vw;
        height: 8vh;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 96px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .links{
        display: flex;
        gap: 32px;
        align-items: center;
    }

    .logo{
        font-size: 1.5rem;
    }
    .nav ul{
        display: flex;
        gap: 32px;
        list-style: none;
    }
    .nav a{
        text-decoration: none;
        color: #333;
    }
    .nav a:hover{
        color: #000;
    }

    .socials a{
        text-decoration: none;
        color: #333;
    }
    .socials a:hover{
        color: #000;
    }

    .nav a.active {
        font-weight: bold;
    }

    .hamburger {
        display: none;
        font-size: 1.5rem;
        cursor: pointer;
    }

    @media (max-width: 768px){
        hr{
            display: none;
        }

        .socials{
            display: none;
        }

        .header{
            display: flex;
            align-items: center;
            justify-content: space-around;
            padding: 0 16px;
        }

        .nav ul {
            display: none;
            flex-direction: column;
            gap: 16px;
            position: absolute;
            top: 8vh;
            left: 0;
            width: 100%;
            background-color: #f9f9f9;
            padding: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .nav ul.active {
            display: flex;
        }

        .hamburger {
            display: block;
        }

        .links {
            flex-direction: column;
            gap: 16px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const currentLocation = location.href;
        const menuItem = document.querySelectorAll('.nav ul li a');
        const menuLength = menuItem.length;
        for (let i = 0; i < menuLength; i++) {
            if ((menuItem[i] as HTMLAnchorElement).href === currentLocation) {
                menuItem[i].className = "active";
            }
        }

        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('.nav ul');
        if (hamburger && navMenu) {
            hamburger.addEventListener('click', () => {
                navMenu.classList.toggle('active');
            });
        }
    });
</script>