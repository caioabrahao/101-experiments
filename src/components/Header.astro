<header class="header">
    <p class="logo">101EXP</p>
    <div class="links">
        <nav class="nav">
            <ul>
                <li><a href="/">Inicio</a></li>
                <li><a href="/introduction-guide">Participar</a></li>
                <li><a href="#">Aprender</a></li>
                <li><a href="#">Ideias</a></li>
            </ul>
        </nav>
        <div class="socials">
            <a href="#"> <i class="ri-discord-fill"></i></a>
        </div>
    </div>
    
</header>

<style>
    i{
        font-size: 1.5rem;
    }

    .header{
        position: fixed;
        width: 100vw;
        height: 8vh;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 96px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .links{
        display: flex;
        gap: 32px;
        align-items: center;
    }

    .logo{
        font-size: 1.5rem;
    }
    .nav ul{
        display: flex;
        gap: 32px;
        list-style: none;
    }
    .nav a{
        text-decoration: none;
        color: #333;
    }
    .nav a:hover{
        color: #000;
    }

    .socials a{
        text-decoration: none;
        color: #333;
    }
    .socials a:hover{
        color: #000;
    }

    .nav a.active {
        font-weight: bold;
    }
    
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const currentLocation = location.href;
        const menuItem = document.querySelectorAll('.nav ul li a');
        const menuLength = menuItem.length;
        for (let i = 0; i < menuLength; i++) {
            if ((menuItem[i] as HTMLAnchorElement).href === currentLocation) {
                menuItem[i].className = "active";
            }
        }
    });
</script>