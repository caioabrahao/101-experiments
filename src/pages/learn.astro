---
import BaseLayout from "../layouts/BaseLayout.astro";
const posts = await Astro.glob('./learn/*.md');

---

<BaseLayout>
<main>
    <section class="section">
        <h1>Bem-vindo ao Blog!</h1>

        <ul>
            {posts.map(post => (
                <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))}
        </ul>
    </section>
</main>
</BaseLayout>

<style>
    .section{
        min-height: 90vh;
        padding: 10% 0;
    }
</style>